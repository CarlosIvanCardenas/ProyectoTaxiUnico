@model TaxiUnicoWebClient.Models.Classes.Administrador
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container">
    <div class="page-header clearfix detailHeading">
      <h2>Iniciar Sesión:</h2>
    </div>
</div>

<div class="container">
  <div class="jumbotron" style="padding-left:30%; padding-right:30%;">
    <form method="post">
      <div class="form-group row">
        <label for="inputUser" class="col-sm-3 col-form-label">Correo:</label>
        <div class="col-sm-9">
          <input asp-for="Correo" class="form-control" id="inputUser" placeholder="Ingrese su correo electrónico">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPassword" class="col-sm-3 col-form-label">Contraseña: </label>
        <div class="col-sm-9">
          <input asp-for="Contraseña" type="password" class="form-control" id="inputPassword" placeholder="Ingrese contraseña">
        </div>
      </div>
      <br>
      <div class="form-group row">
        <div class="col-sm-12">
          <center>
            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
          </center>
        </div>
      </div>
      @Html.AntiForgeryToken()
    </form>
  </div>
</div>